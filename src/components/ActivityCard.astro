---
const { image, date, description, title } = Astro.props;
import Button from "./Button.astro";
---

<div
  class="activity-card min-w-[300px] md:min-w-[400px] min-h-[30rem] bg-gray-100 rounded-[5px] hover:bg-gray-200 hover:cursor-pointer transition duration-300 ease-in-out"
>
  <div class="activity-card_image h-[300px]">
    <img src={image} alt={title} class="w-full h-full object-cover rounded-t-[5px]" />
  </div>
  <div class="activity-card_content p-5 flex flex-col">
    <p id="date" class="text-gray-400 pb-2">{date}</p>
    <h3 class="text-h4-mobile font-bold line-clamp-1 mb-2">{title}</h3>
    <p class="line-clamp-2 mb-5">{description}</p>
    <a href="#" aria-label="Placeholder-link (ingen funktionalitet)">
      <Button variant="secondary" size="small">LÃ¦s mere og tilmeld</Button>
    </a>
  </div>
</div>

<style>
  body.dark .activity-card {
    background-color: #4f4f4f;
  }

  body.dark .activity-card:hover {
    background-color: #5b5b5b;
  }

  body.dark .activity-card_content h3,
  body.dark .activity-card_content p {
    color: #f6f6f6;
  }

  body.dark .activity-card_content #date {
    color: #b3b3b3;
  }
</style>
