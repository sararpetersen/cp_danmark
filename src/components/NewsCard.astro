---
import Button from "./Button.astro";
const { image, date, description, title } = Astro.props;
---

<div
  class="news-card flex flex-col min-w-[400px] h-[37rem] bg-gray-100 rounded-[5px] hover:bg-gray-200 hover:cursor-pointer transition duration-300 ease-in-out"
>
  <div class="news-card_image">
    <img src={image} alt={title} class="w-full h-full object-cover rounded-t-[5px]" />
  </div>
  <div class="news-card_content p-6 flex flex-col">
    <p id="date" class="text-gray-400 mb-2">{date}</p>
    <h3 class="text-h4-mobile mb-2 line-clamp-2" set:html={title} />
    <p class="mb-5 line-clamp-2">{description}</p>
    <a href="/nyheder">
      <Button variant="secondary" size="small">LÃ¦s mere</Button>
    </a>
  </div>
</div>

<style>
  body.dark .news-card {
    background-color: #4f4f4f;
  }

  body.dark .news-card:hover {
    background-color: #5b5b5b;
  }

  body.dark .news-card_content h3,
  body.dark .news-card_content p {
    color: #f6f6f6;
  }

  body.dark .news-card_content #date {
    color: #b3b3b3;
  }
</style>
