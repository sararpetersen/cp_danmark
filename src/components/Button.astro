---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "px-6 p-2 font-semibold transition duration-300 uppercase";

const variantClasses = {
  primary: "main-button bg-blue-700 border-2 border-blue-700 text-gray-50 hover:bg-blue-600 hover:border-blue-600",
  secondary: "secondary-button bg-orange-500 hover:bg-orange-700 text-gray-50",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>

<style>
  .main-button {
    background-color: #034f9a;
    border: #034f9a 2px solid;
    color: #f6f6f6;
    transition: 0.6s;
  }

  .main-button:hover {
    background-color: #0268c7;
    border: #0268c7 2px solid;
    cursor: pointer;
  }

  .active {
    background-color: #0268c7;
    color: #f6f6f6;
  }
</style>
