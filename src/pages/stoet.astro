---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---

<MainLayout
  title="CP Danmark | Støt os"
  description="CP Danmarks 'Støt os'-side"
  ogtitle="CP Danmark – Landsforeningen for cerebral parese"
  ogdescription="Støt CP Danmark på forskellige måder— enten en enkelt gang eller med et fast beløb hver måned"
>
  <section id="hero" class="hero-section grid grid-cols-12 md:pt-20 pt-16 md:pb-desktop-bottom pb-mobil-bottom w-full h-screen md:px-0 px-4 relative">
    <div class="absolute inset-0 md:mt-12 mt-0 max-w-7xl mx-auto md:px-0 px-8 z-20 grid grid-cols-12 gap-6 content-center md:pb-24 pb-0 h-full">
      <div class="breadcrumb col-span-12">
        <a
          href="/"
          aria-label="Gå tilbage til forsiden"
          class="underline text-[#7dc1fc] hover:text-[#A4C8FE] focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300 ease-in-out"
          >Forside</a
        >
        <span> / </span>
        <a
          href="/stoet"
          aria-label="Denne side er 'Støt os'"
          class="underline text-[#7dc1fc] hover:text-[#A4C8FE] focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300 ease-in-out"
          >Støt os</a
        >
      </div>

      <h1 id="hero-title" class="md:pb-6 pb-0 display col-span-12">Støt os</h1>
      <h2 id="hero-text" class="font-regular italic md:col-span-6 col-span-12 text-h4-mobile text-gray-50 max-w-3xl">
        Fordi ingen skal stå alene med CP
      </h2>
    </div>

    <div class="hero_image w-full h-full absolute inset-0 z-0">
      <img
        src="/images/support_image.webp"
        alt="Hero-billede til CP Danmark's 'Støt os'-side"
        class="w-full h-full object-cover brightness-[85%]
        scale-x-[-1]"
      />
    </div>

    <div id="overlay1" class="absolute top-0 left-0 w-full h-full bg-gray-950 bg-opacity-[50%] z-0"></div>
    <div
      id="overlay2"
      class="absolute top-0 left-0 md:w-[50%] w-full h-full md:backdrop-blur-sm bg-opacity-75 bg-blue-800 z-0 md:rounded-r-full hidden md:block"
    >
    </div>

    <div id="scroll-down" class="absolute bottom-[3%] md:bottom-[2.5%] w-full flex justify-center z-[20]">
      <a href="#main-section" aria-label="Gå videre ned på siden" class="focus:outline-none focus:ring-2 focus:ring-blue-400">
        <div class="float flex flex-col items-center hover:opacity-80 transition duration-300 ease-in-out">
          <p class="text-[18px] text-gray-50 font-semibold">Gå videre ned på siden</p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-8 h-8 sm:w-12 sm:h-12 text-gray-50 hover:text-[#4E94FD] transition duration-300 ease-in-out"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5"></path>
          </svg>
        </div>
      </a>
    </div>
  </section>
  <section id="main-section">
    <div class="grid grid-cols-12 md:pt-20 pt-16 md:pb-desktop-bottom pb-mobil-bottom">
      <div class="col-start-2 col-span-10 items-center">
        <div id="top-section">
          <h3 class="pb-6">Støt mennesker med cerebral parese</h3>
          <p class="md:pb-16 pb-12 max-w-4xl">
            CP Danmark er afhængig af bidrag i arbejdet for at forbedre forholdene og livskvaliteten for mennesker med cerebral parese og deres
            pårørende.
          </p>
        </div>
        <!-- Radio buttons to choose support type -->
        <div id="support-type" class="flex flex-col md:mb-24 mb-12 bg-dust-100 border border-dust-300 p-4 md:w-[40%] rounded-[5px]">
          <h3 class="text-h4-mobile pb-2">Hvordan vil du støtte?</h3>
          <label class="inline-flex items-center mr-6">
            <input
              type="radio"
              name="supportType"
              value="enkelt"
              class="form-radio focus:outline-none focus:ring-2 focus:ring-blue-400"
              aria-label="Enkeltbidrag"
              checked
            />
            <span class="enkelt ml-2">Enkeltbidrag</span>
          </label>
          <label class="inline-flex items-center">
            <input
              type="radio"
              name="supportType"
              value="fast"
              class="form-radio focus:outline-none focus:ring-2 focus:ring-blue-400"
              aria-label="Fast bidrag"
            />
            <span class="fast ml-2">Fast bidrag</span>
          </label>
        </div>

        <!-- Enkeltbidrag form -->
        <div id="enkeltForm">
          <div class="mb-4">
            <h4>Dine oplysninger</h4>
          </div>
          <label class="block mb-1 font-semibold">Fulde navn<span class="text-orange-600">*</span></label>
          <input
            type="text"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-12"
            placeholder="F.eks. Borris Jensen"
            aria-label="Fulde navn"
            required
          />

          <label class="block mb-1 font-semibold">Adresse<span class="text-orange-600">*</span></label>
          <input
            type="text"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. Guldbergsgade 29N"
            aria-label="Adresse"
            required
          />

          <label class="block mb-1 font-semibold">Telefon</label>
          <input
            type="number"
            class="md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. 46 46 00 00"
            aria-label="Telefon"
          />

          <label class="block mb-1 font-semibold">Mobiltelefon<span class="text-orange-600">*</span></label>
          <input
            type="number"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. 11 22 33 44"
            aria-label="Mobiltelefon"
            required
          />

          <label class="block mb-1 font-semibold">Email<span class="text-orange-600">*</span></label>
          <input
            type="email"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. borris-jensen@gmail.com"
            aria-label="Email"
            required
          />

          <label class="block mb-1 font-semibold">Gentag email<span class="text-orange-600">*</span></label>
          <input
            type="email"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. borris-jensen@gmail.com"
            aria-label="Gentag email"
            required
          />

          <div class="mb-12">
            <label class="block mb-1 font-semibold">CPR-nummer</label>
            <input
              type="number"
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px]"
              placeholder="Indtast CPR-nummer"
              aria-label="CPR-nummer"
            />
            <p class="text-[14px] italic pt-2">Indtastes hvis du ønsker, at vi indberetter beløbet til SKAT</p>
          </div>

          <label class="block mb-1 font-semibold">Beløb (DKK)<span class="text-orange-600">*</span></label>
          <select
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            aria-label="Vælg beløb"
            required
          >
            <option>-- Vælg beløb --</option>
            <option>50 kr.</option>
            <option>100 kr.</option>
            <option>200 kr.</option>
            <option>300 kr.</option>
            <option>400 kr.</option>
            <option>500 kr.</option>
            <option>600 kr.</option>
            <option>700 kr.</option>
            <option>800 kr.</option>
            <option>900 kr.</option>
            <option>1000 kr.</option>
          </select>

          <label class="block mb-1 font-semibold">Andet beløb</label>
          <input
            type="number"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="Indtast andet beløb"
            aria-label="Andet beløb"
          />

          <label class="block mb-1 font-semibold">Besked til CP Danmark</label>
          <textarea
            rows="8"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-2"
            placeholder="Skriv besked til CP Danmark"
            aria-label="Besked til CP Danmark"
          >
          </textarea>

          <div class="flex items-center mb-8">
            <label class="block md:ml-2 ml-3 font-medium"></label>
            <input
              type="checkbox"
              class="w-[20px] p-2 border focus:outline-none focus:ring-2 focus:ring-blue-400"
              aria-label="Accepter handelsbetingelser og privatlivspolitik"
              required
            />
            <label class="block md:ml-2 ml-3 font-medium"
              >Jeg accepterer CP Danmarks <a
                href="https://www.cpdanmark.dk/om-os/handelsbetingelser/"
                target="_blank"
                class="underline focus:outline-none focus:ring-2 focus:ring-blue-400 text-[#4E94FD] hover:text-blue-600 transition duration-300 ease-in-out"
                >handelsbetingelser</a
              > og <a
                href="https://www.cpdanmark.dk/om-os/handelsbetingelser/"
                target="_blank"
                class="underline focus:outline-none focus:ring-2 focus:ring-blue-400 text-[#4E94FD] hover:text-blue-600 transition duration-300 ease-in-out"
                >privatlivspolitik</a
              ></label
            >
          </div>
        </div>

        <!-- Fast bidragsyder form -->
        <div id="fastForm" class="hidden">
          <div class="mb-4">
            <h4>Dine oplysninger</h4>
          </div>
          <label class="block mb-1 font-semibold">Fulde navn<span class="text-orange-600">*</span></label>
          <input
            type="text"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-12"
            placeholder="F.eks. Borris Jensen"
            aria-label="Fulde navn"
            required
          />

          <label class="block mb-1 font-semibold">Adresse<span class="text-orange-600">*</span></label>
          <input
            type="text"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. Guldbergsgade 29N"
            aria-label="Adresse"
            required
          />

          <label class="block mb-1 font-semibold">Telefon</label>
          <input
            type="number"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. 46 46 00 00"
            aria-label="Telefon"
          />

          <label class="block mb-1 font-semibold">Mobiltelefon</label>
          <input
            type="number"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. 11 22 33 44"
            aria-label="Mobiltelefon"
          />

          <label class="block mb-1 font-semibold">Email<span class="text-orange-600">*</span></label>
          <input
            type="email"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
            placeholder="F.eks. borris-jensen@gmail.com"
            aria-label="Email"
            required
          />

          <label class="block mb-1 font-semibold">Gentag email<span class="text-orange-600">*</span></label>
          <input
            type="email"
            class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-3"
            placeholder="F.eks. borris-jensen@gmail.com"
            aria-label="Gentag email"
            required
          />
          <div class="flex items-center mb-12">
            <input
              type="checkbox"
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 w-[20px] p-2 border"
              aria-label="Tilmeld til nyhedsbrev"
            />
            <label class="block ml-2 font-medium">Tilmeld til nyhedsbrev</label>
          </div>
          <div class="mb-12">
            <p class="font-bold italic pb-5">Som fast bidragdsyder har du flere mulighed for valg af betaling...</p>

            <label class="block mb-1 font-semibold">Betalingsfrekvens</label>
            <select
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
              aria-label="Betalingsfrekvens"
            >
              <option>-- Vælg betalingsfrekvens --</option>
              <option>Månedlig</option>
              <option>Halvårlig</option>
              <option>Kvartalsvis</option>
              <option>Årlig</option>
            </select>

            <label class="block mb-1 font-semibold">Beløb (DKK)</label>
            <select
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px]"
              aria-label="Vælg beløb"
            >
              <option>-- Vælg beløb --</option>
              <option>50 kr.</option>
              <option>100 kr.</option>
              <option>200 kr.</option>
              <option>300 kr.</option>
              <option>400 kr.</option>
              <option>500 kr.</option>
              <option>600 kr.</option>
              <option>700 kr.</option>
              <option>800 kr.</option>
              <option>900 kr.</option>
              <option>1000 kr.</option>
            </select>
          </div>
          <div class="mb-3">
            <h4 class="text-h4-mobile mb-1">Betalingsservice</h4>
            <p class="italic pb-5 max-w-xl">
              Du skal være over 18 år for at tilmelde betaling af dit medlemskontingent til betalingsservice. Tilmeld dig ved at udfylde...
            </p>
            <label class="block mb-1 font-semibold">CPR-nummer<span class="text-orange-600">*</span></label>
            <input
              type="number"
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
              placeholder="Indtast CPR-nummer"
              aria-label="CPR-nummer"
              required
            />

            <label class="block mb-1 font-semibold">Registreringsnummer<span class="text-orange-600">*</span></label>
            <input
              type="number"
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px] mb-4"
              placeholder="Indtast registreringsnummer"
              aria-label="Registreringsnummer"
              required
            />

            <label class="block mb-1 font-semibold">Kontonummer<span class="text-orange-600">*</span></label>
            <input
              type="number"
              class="focus:outline-none focus:ring-2 focus:ring-blue-400 md:w-[50%] w-full p-2 bg-dust-100 border-dust-300 rounded-[5px]"
              placeholder="Indtast kontonummer"
              aria-label="Kontonummer"
              required
            />
          </div>
          <div class="flex items-center mb-8">
            <input type="checkbox" class="w-[20px] p-2 border" aria-label="Jeg accepterer CP Danmarks handelsbetingelser og privatlivspolitik" />
            <label class="block md:ml-2 ml-3 font-medium"
              >Jeg accepterer CP Danmarks <a
                href="https://www.cpdanmark.dk/om-os/handelsbetingelser/"
                target="_blank"
                class="underline focus:outline-none focus:ring-2 focus:ring-blue-400 text-blue-700 hover:text-blue-600 transition duration-300 ease-in-out"
                >handelsbetingelser</a
              > og <a
                href="https://www.cpdanmark.dk/om-os/handelsbetingelser/"
                target="_blank"
                class="underline focus:outline-none focus:ring-2 focus:ring-blue-400 text-blue-700 hover:text-blue-600 transition duration-300 ease-in-out"
                >privatlivspolitik</a
              ></label
            >
          </div>
        </div>
        <a href="#" aria-label="Placeholder-link (ingen funktionalitet)" class="w-[50%] focus:outline-none focus:ring-2 focus:ring-blue-400"
          ><Button variant="secondary" size="small">Støt nu</Button></a
        >
      </div>
    </div>
  </section>
</MainLayout>
<style>
  /* Floating Animation */
  @keyframes float {
    0% {
      transform: translatey(0);
    }
    50% {
      transform: translatey(-10px);
    }
    100% {
      transform: translatey(0);
    }
  }

  .float {
    animation: float 3s ease-in-out infinite;
  }

  .breadcrumb a {
    color: #7dc1fc;
  }

  .breadcrumb a:hover {
    color: #a4c8fe;
  }

  .breadcrumb span {
    color: #f6f6f6;
  }

  input:focus,
  select:focus,
  textarea:focus,
  option:focus {
    outline: none;
    box-shadow: 0 0 0 2px #7dc1fc;
  }

  body.dark h2,
  body.dark h3,
  body.dark h4,
  body.dark p {
    color: #f6f6f6;
  }

  body.dark input,
  body.dark select,
  body.dark textarea,
  body.dark option {
    background-color: #4f4f4f;
    border: #7d7d7d 1px solid;
  }

  body.dark a {
    color: #7dc1fc;
  }

  body.dark a:hover {
    color: #a4c8fe;
  }

  body.dark span {
    color: #ff4545;
  }

  body.dark .fast,
  body.dark .enkelt {
    color: #f6f6f6;
  }

  body.dark input::placeholder,
  body.dark select::placeholder,
  body.dark textarea::placeholder,
  body.dark option::placeholder {
    color: #b3b3b3;
  }

  body.dark #support-type {
    background-color: #4f4f4f;
    border: #7d7d7d 1px solid;
  }
</style>
<script>
  const radioButtons = document.querySelectorAll('input[name="supportType"]');
  const enkeltForm = document.getElementById("enkeltForm");
  const fastForm = document.getElementById("fastForm");

  radioButtons.forEach((radio) => {
    radio.addEventListener("change", () => {
      if (radio.value === "enkelt") {
        enkeltForm.classList.remove("hidden");
        fastForm.classList.add("hidden");
      } else {
        fastForm.classList.remove("hidden");
        enkeltForm.classList.add("hidden");
      }
    });
  });

  // inView-animations

  import { inView } from "motion";

  document.addEventListener("DOMContentLoaded", () => {
    const reduceMotion = document.body.classList.contains("reduce-motion");

    if (!reduceMotion) {
      const elementmedanimation1 = document.querySelector("#hero h1");
      inView(elementmedanimation1, () => {
        elementmedanimation1.classList.add("animate__animated", "animate__backInLeft");
      });

      const elementmedanimation2 = document.querySelector("#hero h2");
      inView(elementmedanimation2, () => {
        elementmedanimation2.classList.add("animate__animated", "animate__backInRight");
      });

      const elementmedanimation3 = document.querySelector(".breadcrumb");
      inView(elementmedanimation3, () => {
        elementmedanimation3.classList.add("animate__animated", "animate__fadeInLeft");
      });

      const elementmedanimation4 = document.querySelector("#top-section h3");
      inView(elementmedanimation4, () => {
        elementmedanimation4.classList.add("animate__animated", "animate__fadeInLeft");
      });

      const elementmedanimation5 = document.querySelector("#top-section p");
      inView(elementmedanimation5, () => {
        elementmedanimation5.classList.add("animate__animated", "animate__fadeInRight");
      });

      const elementmedanimation5a = document.querySelector("#support-type");
      inView(elementmedanimation5a, () => {
        elementmedanimation5a.classList.add("animate__animated", "animate__slideInLeft");
      });

      const elementmedanimation6 = document.querySelector("#enkeltForm");
      inView(elementmedanimation6, () => {
        elementmedanimation6.classList.add("animate__animated", "animate__fadeInUp");
      });

      const elementmedanimation7 = document.querySelector("#fastForm");
      inView(elementmedanimation7, () => {
        elementmedanimation7.classList.add("animate__animated", "animate__fadeInUp");
      });
    }
  });
</script>
