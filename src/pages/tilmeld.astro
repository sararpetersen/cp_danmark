<script>
  const radioButtons = document.querySelectorAll('input[name="supportType"]');
  const formSections = {
    enkelt: document.getElementById("enkeltForm"),
    fast: document.getElementById("fastForm"),
    support: document.getElementById("supportForm"),
    life: document.getElementById("lifeForm"),
  };

  radioButtons.forEach((radio) => {
    radio.addEventListener("change", () => {
      const selected = radio.value;

      // Hide all form sections
      Object.values(formSections).forEach((form) => {
        form.classList.add("hidden");
      });

      // Show the selected form section
      if (formSections[selected]) {
        formSections[selected].classList.remove("hidden");
      }
    });
  });

  const email = document.getElementById("email");
  const email2 = document.getElementById("email2");

  email2.addEventListener("input", () => {
    if (email.value !== email2.value) {
      email2.setCustomValidity("Emailadresserne matcher ikke.");
    } else {
      email2.setCustomValidity("");
    }
  });

  // inView-animations

  import { inView } from "motion";

  document.addEventListener("DOMContentLoaded", () => {
    const reduceMotion = document.body.classList.contains("reduce-motion");

    if (!reduceMotion) {
      const elementmedanimation1 = document.querySelector("#hero h1");
      inView(elementmedanimation1, () => {
        elementmedanimation1.classList.add("animate__animated", "animate__backInLeft");
      });

      const elementmedanimation2 = document.querySelector("#hero h2");
      inView(elementmedanimation2, () => {
        elementmedanimation2.classList.add("animate__animated", "animate__backInRight");
      });

      const elementmedanimation3 = document.querySelector(".breadcrumb");
      inView(elementmedanimation3, () => {
        elementmedanimation3.classList.add("animate__animated", "animate__fadeInLeft");
      });

      const elementmedanimation4 = document.querySelector("#top-section h3");
      inView(elementmedanimation4, () => {
        elementmedanimation4.classList.add("animate__animated", "animate__fadeInLeft");
      });

      const elementmedanimation5 = document.querySelector("#top-section p");
      inView(elementmedanimation5, () => {
        elementmedanimation5.classList.add("animate__animated", "animate__fadeInRight");
      });

      const elementmedanimation5a = document.querySelector("#support-type");
      inView(elementmedanimation5a, () => {
        elementmedanimation5a.classList.add("animate__animated", "animate__slideInLeft");
      });

      const elementmedanimation6 = document.querySelector("#enkeltForm");
      inView(elementmedanimation6, () => {
        elementmedanimation6.classList.add("animate__animated", "animate__fadeInUp");
      });

      const elementmedanimation7 = document.querySelector("#fastForm");
      inView(elementmedanimation7, () => {
        elementmedanimation7.classList.add("animate__animated", "animate__fadeInUp");
      });

      const elementmedanimation8 = document.querySelector("#supportForm");
      inView(elementmedanimation8, () => {
        elementmedanimation8.classList.add("animate__animated", "animate__fadeInUp");
      });

      const elementmedanimation9 = document.querySelector("#lifeForm");
      inView(elementmedanimation9, () => {
        elementmedanimation9.classList.add("animate__animated", "animate__fadeInUp");
      });

      const elementmedanimation10 = document.querySelector("#benefits h4");
      inView(elementmedanimation10, () => {
        elementmedanimation10.classList.add("animate__animated", "animate__fadeInLeft");
      });

      // Delay animations
      const benefits1 = document.querySelectorAll("#benefits-section1 > div");
      benefits1.forEach((el, index) => {
        inView(el, () => {
          el.classList.add("animate__animated", "animate__fadeInRight");
          el.style.animationDelay = `${index * 0.2}s`;
        });
      });

      const benefits2 = document.querySelectorAll("#benefits-section2 > div");
      benefits2.forEach((el, index) => {
        inView(el, () => {
          el.classList.add("animate__animated", "animate__fadeInLeft");
          el.style.animationDelay = `${index * 0.2}s`;
        });
      });
    }
  });
</script>
